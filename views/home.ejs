<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="all-blogs content ">
        <h3>Blogs content</h3>
        <br/>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog =>{ %>
                <h3 class='title' ><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
                <br/>
           <% }) %>
           
        <% }else{ %>
            <button id="create" class="submit" onclick= " res.redirect('/blogs/create')" >Create</button>
               
        <% } %>
    </div>
</body>
</html>